<h1><%= @user.name %>'s Profile</h1>
<p><%= @user.profile %></p>
<%= link_to "フォロー #{@user.following.count} ", following_user_path(@user) %>
<%= link_to "フォロワー #{@user.followers.count} ", followers_user_path(@user) %>

<% unless current_user == @user %>
  <% if current_user.following?(@user) %>
    <%= link_to 'Unfollow', unfollow_user_path(@user), method: :delete, class: "follow-button unfollow" %>
  <% else %>
    <%= link_to 'Follow', follow_user_path(@user), method: :post, class: "follow-button follow" %>
  <% end %>
<% end %>

<h3><%= @user.name %>'s Tweets</h3>
<%= render @tweets %>
<%= paginate @tweets %>
