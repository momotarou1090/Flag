<div class="login-container">
  <div class="logo">
    <%= image_tag "IMG_2039.PNG", alt: "Company Logo" %>
  </div>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'transparent-input', placeholder: ' ' %>
      <!-- ラベルを input タグの後に配置 -->
      <%= f.label :email, "ID", class: 'input-label' %>
    </div>

    <div class="field">
      <%= f.password_field :password, autocomplete: "current-password", class: 'transparent-input', placeholder: ' ' %>
      <!-- ラベルを input タグの後に配置 -->
      <%= f.label :password, "PASS", class: 'input-label' %>
    </div>


    <!--<% if devise_mapping.rememberable? %>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end %>
    -->

    <div class="actions">
      <%= f.submit "Log in", class: 'submit-button' %>
    </div>
  <% end %>
</div>
